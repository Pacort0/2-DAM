<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="U5_EJ2._1.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">
            <Label Text="ROTANDO" BindingContext="{x:Reference stepper}" Rotation="{Binding Rotation}"/>
            <Stepper x:Name="stepper" Maximum="360" Increment="25" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
